<UserControl x:Class="TimeKeeper.UIComponents.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeKeeper.UIComponents"
             xmlns:btn="clr-namespace:TimeKeeper.UIComponents.Buttons"
             mc:Ignorable="d" 
             d:DesignHeight="650">
    
    <Grid>
        <Border Background="{StaticResource LayerFillColorBrush2}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="240"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- #Side Navigation Bar Buttons -->
                <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Background="{StaticResource LayerFillColorBrush1}"/>
                
                <!-- #Navigation Buttons -->
                <Border Grid.Column="1" Grid.Row="0" Background="{StaticResource LayerFillColorBrush2}">
                    <StackPanel Margin="7,55,7,0">
                        <btn:NavigationBarButton
                            ButtonText="Timesheet"
                            ButtonClickedCommand="{Binding DailyTimesheetButtonClickedCommand}"
                            ButtonImageSource="{StaticResource CalendarNavBarButton}"
                            ButtonImageSourceMouseOver="{StaticResource CalendarNavBarButtonMouseOver}"
                            ButtonImageSourcePressed="{StaticResource CalendarNavBarButtonPressed}"
                            ButtonImageSourceDisabled="{StaticResource CalendarNavBarButtonDisabled}"/>
                        <btn:NavigationBarButton
                            ButtonText="Projects"
                            ButtonClickedCommand="{Binding ProjectsButtonClickedCommand}"
                            ButtonImageSource="{StaticResource BriefcaseNavBarButton}"
                            ButtonImageSourceMouseOver="{StaticResource BriefcaseNavBarButtonMouseOver}"
                            ButtonImageSourcePressed="{StaticResource BriefcaseNavBarButtonPressed}"
                            ButtonImageSourceDisabled="{StaticResource BriefcaseNavBarButtonDisabled}"/>
                    </StackPanel>
                </Border>

                <!-- #Title -->
                <Label Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Content="Time Keeper"/>
            </Grid>

        </Border>
    </Grid>
    
</UserControl>
