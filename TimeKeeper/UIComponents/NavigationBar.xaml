<UserControl x:Class="TimeKeeper.UIComponents.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeKeeper.UIComponents"
             mc:Ignorable="d" 
             d:DesignHeight="650">
    
    <Grid>
        <Border>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="240"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- #Side Navigation Bar Buttons -->
                <Border Grid.Column="0" Grid.Row="0"/>
                
                <!-- #Navigation Buttons -->
                <StackPanel Grid.Column="1" Grid.Row="0">
                    <Button Content="Placeholder"/>
                    <Button Content="Placeholder"/>
                </StackPanel>

                <!-- #Title -->
                <Label Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Content="Placeholder"/>
            </Grid>

        </Border>
    </Grid>
    
</UserControl>
