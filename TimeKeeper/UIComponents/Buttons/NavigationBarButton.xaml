<UserControl x:Class="TimeKeeper.UIComponents.Buttons.NavigationBarButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeKeeper.UIComponents.Buttons"
             mc:Ignorable="d" 
             d:DesignWidth="250">
    
    <Grid>
        <Border>

            <Button Command="{Binding ButtonClickedCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}">
                <Button.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource NavigationBarButtonStyle}">
                        <Setter Property="Padding" Value="{Binding ButtonPadding, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}"/>
                    </Style>
                </Button.Resources>

                <StackPanel Orientation="Horizontal">
                    <Image Stretch="None">
                        <Image.Resources>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value="{Binding ButtonImageSource, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}"/>
                                <Style.Triggers>
                                    <!-- #Mouse over, enabled behaviors -->
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}" Value="True"/>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsEnabled}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Source" Value="{Binding ButtonImageSourceMouseOver, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}"/>
                                    </MultiDataTrigger>
                                    <!-- #Pressed behaviors -->
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsPressed}" Value="True">
                                        <Setter Property="Source" Value="{Binding ButtonImageSourcePressed, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}"/>
                                    </DataTrigger>
                                    <!-- #Disabled behaviors -->
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsEnabled}" Value="False">
                                        <Setter Property="Source" Value="{Binding ButtonImageSourceDisabled, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Resources>
                    </Image>
                    
                    <TextBlock Text="{Binding ButtonText, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}">
                        <TextBlock.Resources>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource NavigationBarButtonTextBlockStyle}">
                                
                            </Style>
                        </TextBlock.Resources>
                    </TextBlock>
                </StackPanel>
            </Button>

        </Border>
    </Grid>
    
</UserControl>
