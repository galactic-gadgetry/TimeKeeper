<UserControl x:Class="TimeKeeper.UIComponents.SettingsNavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeKeeper.UIComponents"
             xmlns:btn="clr-namespace:TimeKeeper.UIComponents.Buttons"
             mc:Ignorable="d" d:DesignHeight="650"
             MinWidth="238">
    
    <Grid>
        <Border Background="{StaticResource LayerFillColorBrush2}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="237"/>
                    <ColumnDefinition Width="238"/>
                </Grid.ColumnDefinitions>
                
                <!-- #Empty Side -->
                <Border Grid.Column="0"/>
                
                <!-- #Navigation Buttons -->
                <Border Grid.Column="1">
                    <ScrollViewer Style="{DynamicResource RoundedScrollBarScrollViewerStyle}">
                        <StackPanel Margin="0,55,10,0">
                            <StackPanel.Resources>
                                <Style TargetType="btn:NavigationBarButton">
                                    <Setter Property="ButtonPadding" Value="0,5,11,5"/>
                                </Style>
                            </StackPanel.Resources>

                            <Label
                                Content="USER SETTINGS"
                                Margin="10,0"
                                FontSize="{StaticResource SmallLabelFontSize}"/>
                            <btn:NavigationBarButton
                                ButtonText="Placeholder"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
            
        </Border>
    </Grid>
    
</UserControl>
