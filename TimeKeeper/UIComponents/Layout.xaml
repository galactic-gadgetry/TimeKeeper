<UserControl x:Class="TimeKeeper.UIComponents.Layout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeKeeper.UIComponents"
             xmlns:vm="clr-namespace:TimeKeeper.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Border>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- #Navigation Bar -->
                <Grid Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
                    <ContentControl Content="{Binding CurrentNavBarViewModel}">
                        <ContentControl.Resources>
                            <DataTemplate DataType="{x:Type vm:NavigationBarViewModel}">
                                <local:NavigationBar/>
                            </DataTemplate>
                        </ContentControl.Resources>
                    </ContentControl>
                </Grid>

                <!-- #Main Content Area -->
                <Label Grid.Column="1" Content="Main Content Area placeholder"/>
                
                <!-- #Side Content -->
                <Label Grid.Column="2" Content="Side Content placeholder"/>
                
                <!-- #Info Bar -->
                <Label Grid.Column="1" Grid.Row="1" Content="Info Bar placeholder"/>
            </Grid>
            
        </Border>
    </Grid>
    
</UserControl>
