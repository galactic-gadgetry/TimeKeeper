<Window x:Class="TimeKeeper.UIComponents.Dialogs.CreateNewProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeKeeper.UIComponents.Dialogs"
        mc:Ignorable="d"
        Title="New Project"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        FocusManager.FocusedElement="{Binding ElementName=NameTextBox}">
    
    <Grid>
        <Border>

            <Border Style="{StaticResource DialogOutterBorderStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Style="{StaticResource DialogContentBorderStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                Content="New project"
                                Style="{StaticResource DialogTitleLabelStyle}"/>

                            <TextBlock
                                Grid.Row="1"
                                Text="Details for the new project."
                                Style="{StaticResource DialogContentTextBlockStyle}"/>

                            <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
                                <StackPanel.Resources>
                                    <Style TargetType="Label" BasedOn="{StaticResource DialogInputFieldHeaderLabelStyle}"/>

                                    <Style TargetType="StackPanel" BasedOn="{StaticResource DialogInputFieldStackPanelStyle}"/>

                                    <Style TargetType="TextBox" BasedOn="{StaticResource DialogInputFieldTextBoxStyle}"/>
                                </StackPanel.Resources>
                                
                                <StackPanel>
                                    <Label Content="PROJECT NAME"/>
                                    <TextBox
                                        x:Name="NameTextBox"
                                        Text="Test"/>
                                </StackPanel>

                                <StackPanel>
                                    <Label Content="CODE"/>
                                    <TextBox
                                        x:Name="CodeTextBox"
                                        Text="TEST"/>
                                </StackPanel>

                                <StackPanel>
                                    <Label Content="WBS"/>
                                    <TextBox
                                        x:Name="WbsTextBox"
                                        Text="12345.67.89.10.11"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border
                        Grid.Row="1"
                        Style="{StaticResource DialogControlBorderStyle}"
                        Background="{StaticResource ControlBackgroundFillColorBrush2}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button
                                Grid.Column="0"
                                Content="Back"
                                Background="Transparent"
                                HorizontalAlignment="Left"
                                Click="BackButton_Click"/>

                            <Button
                                Grid.Column="1"
                                Content="Create"
                                Style="{StaticResource AccentButtonStyle}"
                                Width="85"
                                HorizontalAlignment="Right"
                                Click="CreateButton_Click"
                                IsDefault="True"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            
        </Border>
    </Grid>
    
</Window>
