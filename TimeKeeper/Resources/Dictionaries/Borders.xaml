<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="DialogContentBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundFillColorBrush1}"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="CornerRadius" Value="4,4,0,0"/>
    </Style>

    <Style x:Key="DialogControlBorderStyle" TargetType="Border">
        <Setter Property="Padding" Value="10,15,15,15"/>
        <Setter Property="CornerRadius" Value="0,0,4,4"/>
    </Style>
    

    <Style x:Key="DialogOutterBorderStyle" TargetType="Border">
        <Setter Property="MinHeight" Value="250"/>
        <Setter Property="Width" Value="400"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>


    <Style x:Key="ViewBorderStyle" TargetType="Border">
        <Setter Property="MinWidth" Value="705"/>
        <Setter Property="Margin" Value="20,30,20,20"/>
        <Setter Property="Padding" Value="25"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>
    
</ResourceDictionary>