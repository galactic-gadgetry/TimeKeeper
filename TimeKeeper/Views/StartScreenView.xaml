<UserControl x:Class="TimeKeeper.Views.StartScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeKeeper.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1100">
    
    <Grid>
        <Border Background="{StaticResource LayerAccentFillColorBrush1}">

            <Border
                Background="{StaticResource LayerFillColorBrush1}"
                Height="300" Width="600"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Padding="20"
                CornerRadius="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="0.4*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="0"
                        HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <StackPanel.Resources>
                            <Style  TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                                <Setter Property="Margin" Value="10"/>
                            </Style>
                        </StackPanel.Resources>
                        <TextBlock
                            Text="Time Keeper"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,30"
                            FontSize="34">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{StaticResource TextFillColorSecondary100}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <Button
                            Content="New log book"
                            Command="{Binding NewLogBookButtonClickedCommand}"/>
                        <Button
                            Content="Load existing log book"
                            Command="{Binding LoadExistingLogBookButtonClickedCommand}"/>
                    </StackPanel>

                    <Border
                        Grid.Column="1">
                    </Border>
                </Grid>
            </Border>
            
        </Border>
    </Grid>
    
</UserControl>
